<p id="notice"><%= notice %></p>

<h1>Listing Page Templates</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @page_templates.each do |page_template| %>
      <tr>
        <td><%= page_template.title %></td>
        <td><%= link_to 'Show', page_template %></td>
        <td><%= link_to 'Edit', edit_page_template_path(page_template) %></td>
        <td><%= link_to 'Destroy', page_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

